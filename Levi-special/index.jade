block content
  - url = "//image.giccoo.com/projects/Levi-special";
  - url = ".";
  - url2 = "//image.giccoo.com/projects/Levi";
  - url2 = "../../Levi";

  .load#loading(:class="{fadeZoomOut: out,animated: out}",v-show="mounted",style="display: none")
    .loading.fadeOut.animated.delay-20
      img(src="#{url}/img/loading-text.png")
    transition(name="page-fade")
      .loading-text(v-show="progress < 100")
        p Loading...{{progress}}%
    audio#fl(src="//image.giccoo.com/projects/Levi-special/mp3/fl2.mp3")
    transition(name="page-fade")
      .open(v-show="progress >= 99 && openShow",@click="openMusic") 打开声音

  .main#main(v-show="mounted",:class="{biger: biger,smaller:smaller}",style="display: none",:style="{width: w+'px',height: h+'px'}")
    transition(name="page-fade")
      .loading-page(v-show="loading")
        .ball-spin-fade-loader
          div
          div
          div
          div
          div
          div
          div
          div
    transition(name="page-fade")
      .page.page-home
        .content
          //-(@touchstart="start",@touchmove="move",@touchend="end")
          //- #game
          audio#audiotv(src="//image.giccoo.com/projects/Levi-special/mp3/tv.mp3")
          audio#audiocd(src="//image.giccoo.com/projects/Levi-special/mp3/cd2.mp3")
          audio#audiomz(src="//image.giccoo.com/projects/Levi-special/mp3/mz.mp3")
          //- @touchmove=" note = false ", @touchmove=" note = false ",
          .plant#plant(@scroll=" scroll ")
            .bg-box
              img(src="#{url}/img/bg.jpg")
              .hand.hand-tv
              .hand.hand-cd
              .hand.hand-audio
              .neon
                img(src="#{url}/img/neon-off.png")
              .btn-tv(@click="openTV")
              .tv
                .tv-bg
                  img(src="#{url}/img/tv-bg.png")
                  .timg
                    img(src="#{url}/img/timg.gif")
                .front
                  img(src="#{url}/img/tv-front.png")
              .cd-list
                .line.line-1
                  .cd.item(@click="openCD(1)")
                    img(src="#{url}/img/btn-empty.jpg")
                  .cd.item(@click="openCD(2)")
                    img(src="#{url}/img/btn-empty.jpg")
                  .cd.item(@click="openCD(3)")
                    img(src="#{url}/img/btn-empty.jpg")
                  .cd.item(@click="openCD(4)")
                    img(src="#{url}/img/btn-empty.jpg")
                .line.line-2
                  .cd.item(@click="openCD(5)")
                    img(src="#{url}/img/btn-empty.jpg")
                  .cd.item(@click="openCD(6)")
                    img(src="#{url}/img/btn-empty.jpg")
                  a.cd.item(href="/Levi-special/gather.html")
                    img(src="#{url}/img/btn-empty.jpg")
                  a.cd.item(href="/Levi/")
                    img(src="#{url}/img/btn-empty.jpg")
                    //- transition(name="page-fade")
                    //-   a.cover(v-show="btnMore",href="/Levi/")
                    //-     img(src="#{url}/img/btn-build.jpg")
              .btn-audio-run(@click="openCDM")
              .audio-run
                .item.item-1
                  img(src="#{url}/img/audio-run.png")
                .item.item-2
                  img(src="#{url}/img/audio-run.png")
              .focus-join(@click="openMZ")
                .light
                  img(src="#{url}/img/light.gif")
                //- a.focus(href="https://music.163.com/#/user/home?id=1529461944")
                //- .join
              //- .focus-join-light
                a.focus(href="https://music.163.com/#/user/home?id=1529461944")
                .join
            transition(name="page-fade")
              .note(:class="{down: !note}")
                img(src="#{url}/img/note.png")
                transition(name="page-fade")
                  .text(v-show="note")
                    img(src="#{url}/img/note-text.png")

    transition(name="page-fade")
      .pop(v-show="videoPop")
        .close(@click="videoPop = false; document.getElementById('video').pause()")
          img(src="#{url}/img/icon-close.png")
        .video
          video#video(width="640",height="360",src="//image.giccoo.com/projects/Levi-special/mp4/v1.mp4",controls="true",preload="none",webkit-playsinline,playsinline)
        //- .video
          .logo
            img(src="#{url}/img/video-logo.png")
          video#video(width="640",height="360",src="//image.giccoo.com/projects/Levi-special/mp4/v1.mp4",controls="true",preload="none",webkit-playsinline,playsinline)
          .close(@click="videoPop = false; document.getElementById('video').pause()")
            img(src="#{url}/img/video-close.png")


  .main#music(v-show="show",:class="{biger: biger,smaller:smaller}",style="display: none",:style="{width: w+'px',height: h+'px'}")
    transition(name="page-fade")
      .close(@click="show = false; main.noteArrow = true")
        img(src="#{url}/img/icon-close.png")
    transition(name="page-fade")
      .page.page-music(v-show="show")
        .bg(:style="'background-image:url(#{url2}/img/music-bg-'+info.singer+'.jpg)'")
        .content
          //- img(:src="'http://image.giccoo.com/upload/'+info.avatar")
          .bg-box
            img(src="#{url}/img/music-border.png")
          .up
            #cd
            .message
              p(:class="{on: (index+1) == line}",v-for="(text,index) in msgList") {{text}}
            .player
              .btn.btn-play(@click="play")
                .play(v-show="!playing")
                  img(src="#{url2}/img/music-icon-play.png")
                .stop(v-show="playing")
                  img(src="#{url2}/img/music-icon-pause.png")
              .time.time-begin {{timeing}}
              .progress
                .line(:style="{width: playProgress+'%'}")
                  .pointer
              .time.time-end {{timeend}}
              audio#bgm(:src="info.music" @canplay="canplay" @timeupdate="playRun" @playing="playing = true" @pause="playing = false" @ended="playing = false")
            .select
              .btn.btn-prev-music(v-show="now > 1",@click="prev")
                img(src="#{url}/img/btn-next.png")
              a.btn.btn-prev-music(v-show="now <= 1",href="/Levi-special/gather.html")
                img(src="#{url}/img/btn-more.png")
                //- img(:src="'#{url}/img/btn-next'+(now==1?'-stop':'')+'.png'")
              .btn.btn-next-music(v-show="now < 6",@click="next")
                img(src="#{url}/img/btn-prev.png")
              a.btn.btn-next-music(v-show="now >= 6",href="/Levi-special/gather.html")
                img(src="#{url}/img/btn-more.png")
                //- img(:src="'#{url}/img/btn-prev'+(now==6?'-stop':'')+'.png'")   
            //- .nickname
              .my {{info.nickname}}
              .singer
                img(:src="'#{url2}/img/music-singer-name-'+info.singer+'.png'")

          //- a.btn-next(href="http://levi.arkrdigital.com/music/")
            img(src="#{url2}/img/music-btn-next.png")
