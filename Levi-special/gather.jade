block content
  - url = "//image.giccoo.com/projects/Levi-special";
  - url = ".";
  - url2 = "//image.giccoo.com/projects/Levi";
  - url2 = "../../Levi";

  .main#main
    transition(name="page-fade")
      .page.page-gather
        .content
          audio#bgm(@loadstart="load",@play="playing = true",@pause="playing = false",@ended="playing = false",:src="'//image.giccoo.com/projects/Levi-special/mp3/cd-'+now+'.mp3'")
          .bg-top
            img(src="#{url}/img/gather-bg.jpg")
          .empty
          .list
            .item(v-for="item,index in list")
              .cd
                img(:src="'#{url}/img/cd-'+item.id+'.jpg'")
                .btn-play(v-show="now != (index+1) || !playing",@click="play(index)")
                .btn-play.pause(v-show="now == (index+1) && playing",@click="play(index)")
              .msg
                .nickname {{item.nickname}}
                .message {{item.message}}
  
