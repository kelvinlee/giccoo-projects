  .main#main(v-show="mounted",:class="{biger: biger,smaller:smaller}",style="display: none",:style="{width: w+'px',minHeight: h+'px'}")
    transition(name="page-fade")
      .loading-page(v-show="loading")
        .ball-spin-fade-loader
          div
          div
          div
          div
          div
          div
          div
          div
    transition(name="page-fade")
      .page.page-1(v-show="pageIndex == 1")
        .content
          .logo.fadeInUpSmall.animated.duration-10.delay-3
            img(src="#{url}/img/homepage-logo.png")
          .title.fadeInUpSmall.animated.duration-10.delay-5
            img(src="#{url}/img/homepage-title.png")
          .input.fadeInUpSmall.animated.duration-10.delay-7
            input#nickname(type="text",v-model="nickname",placeholder="请输入你的名字")
          .btn.fadeInUpSmall.animated.duration-12.delay-9(@click="nextPage")
            img(src="#{url}/img/btn-start.png")

    transition(name="page-fade")
      .page.page-2(v-show="pageIndex == 2")
        .content
          #ugc
    transition(name="page-fade")
      .pop(v-show="ugcShow")
        .content
          .small-size
            .close(@click="ugcShow = false")
              img(src="#{url}/img/icon-close.png")
            img(:src="ugc")
            .note 长按保存图片
    transition(name="page-fade")
      .pop(v-show="registerShow")
        .content
          .register(:style="{height: regH+'%'}")
            .close(@click="registerShow = false")
              img(src="#{url}/img/icon-close.png")
            .title
              h2 留下您的足迹
              p 有机会赢取Jeep专属VIP好礼
            form-grounp.form(v-bind:form="form",v-on:submit="submit")

    transition(name="page-fade")
      .pop(v-show="lotteryShow")
        .content
          .lottery.faild(:style="{height: regH+'%'}")
            .close(@click="lotteryShow = false")
              img(src="#{url}/img/icon-close.png")
            .title
              h2.centeralign 感谢您的参与！
              p 我们将在活动结束后
              p 10个工作日内短信通知获奖结果
            .btn(@click="goshare",style="width: 65%")
              img(src="#{url}/img/btn-share.png")

    

