block content
  - url = "//image.giccoo.com/projects/lancomeGEN";
  - url = ".";
  //- .qrcode#qrcode
    .qr
      img(src="#{url}/img/qrcode.png")
      .text 请使用手机扫描二维码参与活动
  audio#answer-1(src="#{url}/mp3/answer-new-1.mp3")
  audio#answer-2(src="#{url}/mp3/answer-new-2.mp3")
  audio#answer-3(src="#{url}/mp3/answer-new-3.mp3")
  audio#answer-4(src="#{url}/mp3/answer-new-4.mp3")
  .public#public
    //- player(icon="true",src="#{url}/mp3/bgm.mp3")
    //- .player(:class="{play: playing, pause: !playing}",@click="playing = !playing")
      .icon-play(:class="{play: playing, pause: !playing}")
    transition(name="page-fade")
      .note-text(v-show="note")
        p 建议打开手机声音<br/>获得更好体验效果

  .load#load
    .content#loading(v-show="mounted",style="display: none")
      .texts
        - for (var i = 1; i <= 10; i++)
          .item.fadeInUpSmall.animated(class="delay-#{i*2}")
            img(src="#{url}/img/loading-text-#{i}.png")
        -;
      .loading-text 
        .cd
          .cd-item
            img(src="#{url}/img/small-cd.png")
        p loading...{{progress}}%
  
  .main#main(v-show="mounted",:class="{biger: biger,smaller:smaller}",style="display: none",:style="{width: w+'px',minHeight: h+'px'}")
    transition(name="page-fade")
      .loading-page(v-show="loading")
        .ball-spin-fade-loader
          div
          div
          div
          div
          div
          div
          div
          div
    transition(name="page-fade")
      .page.page-1(v-show="pageIndex == 1")
        .bg
          img(src="#{url}/img/homepage-bg.jpg")
          .before
            img(src="#{url}/img/before-wheel.png")
          .after
            img(src="#{url}/img/after-wheel.png")
        .content
          .texts
            - for (var i = 1; i <= 3; i++)
              .item.fadeInUpSmall.animated(class="item-#{i} delay-#{i*2}")
                img(src="#{url}/img/homepage-text-#{i}.png")
            -;
          .btn.fadeInUpSmall.animated.delay-8(@click="gameStart")
            img(src="#{url}/img/btn-start.png")
          
    transition(name="page-fade")
      .page.page-2(v-show="pageIndex == 2")
        .content
          
          #ugc
          .ugc(v-show="ugc && !wy")
            img(:src="ugc")
          .more(v-show="ugc && !wy" @click="openWeb")
    //- transition(name="page-fade")
      .pop(v-show="ugc")
        img(:src="ugc")
    transition(name="page-fade")
      .pop(v-show="registerShow")
        .content
          .register
            .title
              img(src="#{url}/img/form-title-reg.png")
            form-grounp.form(v-bind:form="form",v-on:submit="submit")
    transition(name="page-fade")
      .pop(v-show="lotteryShow")
        .content
          .register
            .title
              img(src="#{url}/img/form-title-lottery.png")
            form-grounp.form(v-bind:form="lotform",v-on:submit="lotsubmit")
    
          
    

