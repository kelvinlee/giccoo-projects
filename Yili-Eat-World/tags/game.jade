		this.scoreFun = function() {
			console.log(self.game.score)
			self.milk = self.game.milk
			if (tween) {
				tween.stop()
			}
			tween = new TWEEN.Tween({x:self.score}).to({x:self.game.score},1000).onUpdate(function(){
				self.score = parseInt(this.x)
				self.update()
			}).start()
