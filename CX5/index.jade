		img#share(src="http://m.giccoo.com/CX5/img/share.jpg")
	.pages
		.product-logo
			img(src="#{url}img/product-logo.png")
		.page.page-homepage.on
			.content
				.text.text-1.fadeInUp.animated.delay-5
					img(src="#{url}img/homepage-text-1.png")
				.btn.btn-1.fadeInUp.animated.delay-7(next-page=".page-contents")
					img(src="#{url}img/homepage-text-2.png")
					.light.fadeOut80.animated.infinite.duration-18
					//- .star.star-1.duration-15(animate-loop="3000",animate-name="fadeOutRight animated")
					//- 	.star-box.starAnimated.animated.infinite.duration-20
					//- .star.star-2.duration-10(animate-loop="2000",animate-name="fadeOutRight animated")
					//- 	.star-box.starAnimated.animated.infinite.duration-20
