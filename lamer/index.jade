				.texts
					.title.Stamp.animated.duration-5.delay-2
						img(last-load-src="#{url}img/page-8-title.png")
					.text.text-1.fadeInUp.animated.duration-10.delay-5
						img(last-load-src="#{url}img/page-8-text-1.png")
