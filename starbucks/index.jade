block content
  //- url = "//image.giccoo.com/projects/starbucks";
  - url = ".";
  //- .qrcode#qrcode
    .qr
      img(src="#{url}/img/qrcode.png")
      .text 请使用手机扫描二维码参与活动
  //- .public#public
    player(icon="true",src="#{url}/mp3/bgm1-test.mp3")
    //- .player(:class="{play: playing, pause: !playing}",@click="playing = !playing")
      .icon-play(:class="{play: playing, pause: !playing}")
    transition(name="page-fade")
      .note-text(v-show="note")
        p 建议打开手机声音<br/>获得更好体验效果

  .load#load
    .content#loading(v-show="mounted",style="display: none")
      .loading-text
        p.centeralign Loading..{{progress}}%
  
  .main#main(v-show="mounted",:class="{biger: biger, smaller:smaller}",style="display: none",:style="{width: w+'px',minHeight: h+'px'}")
    transition(name="page-fade")
      .loading-page(v-show="loading")
        .ball-spin-fade-loader
          div
          div
          div
          div
          div
          div
          div
          div

    transition(name="page-fade")
      .page.page-1(v-show="pageIndex == 1")
        .content
          //- .logo
            img(src="#{url}/img/logo.png")
          #ugc
          transition(name="page-fade")
            .post-card(v-show="questionShow")
              .question-list
                transition(name="page-fade")
                  .question(v-show="questionIndex == 0")
                    .title 圣诞来袭
                    .answer
                      .item.row(:class="{on: answer1==1}", @click="answer1 = 1") a
                      .item.row(:class="{on: answer1==2}", @click="answer1 = 2") b
                      .item.row(:class="{on: answer1==3}", @click="answer1 = 3") c
                      .item.row(:class="{on: answer1==4}", @click="answer1 = 4") d
                transition(name="page-fade")
                  .question(v-show="questionIndex == 1")
                    .title 选一位圣诞DJ
                    .answer
                      .item(:class="{on: answer2==1}", @click="answer2 = 1") a
                      .item(:class="{on: answer2==2}", @click="answer2 = 2") b
                      .item(:class="{on: answer2==3}", @click="answer2 = 3") c
                      .item(:class="{on: answer2==4}", @click="answer2 = 4") d
                transition(name="page-fade")
                  .question(v-show="questionIndex == 2")
                    .title 不要怂
                    .answer
                      .item.check(:class="{on: answer3.c1}", @click="answer3.c1 = !answer3.c1") a
                      .item.check(:class="{on: answer3.c2}", @click="answer3.c2 = !answer3.c2") b
                      .item.check(:class="{on: answer3.c3}", @click="answer3.c3 = !answer3.c3") c
                      .item.check(:class="{on: answer3.c4}", @click="answer3.c4 = !answer3.c4") d
                transition(name="page-fade")
                  .question(v-show="questionIndex == 3")
                    .title 今年圣诞
                    .answer.input
                      input(type="input",v-model="nickname")
                transition(name="page-fade")
                  .question(v-show="questionIndex == 4")
                    .title 写这里
                    .msg-card
                    .answer.input.textarea
                      textarea(v-model="message")
                      

              .btn-next(@click="nextQuestion")

    

